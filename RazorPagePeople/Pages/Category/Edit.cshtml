@page
@model RazorPagePeople.Pages.Category.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Category.Id" />
            <div class="form-group">
                <label asp-for="Category.Name" class="control-label"></label>
                <input asp-for="Category.Name" class="form-control" />
                <span asp-validation-for="Category.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Description" class="control-label"></label>
                <input asp-for="Category.Description" class="form-control" />
                <span asp-validation-for="Category.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Year" class="control-label"></label>
                <input asp-for="Category.Year" min=@Model.pastYear max=@Model.presentYear class="form-control" />
                <span asp-validation-for="Category.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category.Colour" class="control-label"></label>
                <select asp-for="Category.Colour" asp-items="Html.GetEnumSelectList<Data.Colours>()" class="form-select">
                    <option value="">Select Colour</option> 
                </select>
                <span asp-validation-for="Category.Colour" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
